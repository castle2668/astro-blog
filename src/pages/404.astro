---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import Error from "../images/error-404.jpeg";
---

<MainLayout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-center gap-6">
    <Image src={Error} alt="404" width={250} height={250} />
    <h1 class="text-5xl">Page Not Found</h1>
    <p class="text-lg">The page you are looking for does not exist.</p>
    <a
      href="/"
      class="inline-block bg-gray-100 p-2 hover:bg-indigo-500 hover:text-white"
      >Go Back Home</a
    >
  </div>
</MainLayout>
