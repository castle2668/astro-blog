---
import { Image } from 'astro:assets'

import error from '../images/error-404.jpeg'
import MainLayout from '../layouts/MainLayout.astro'
---

<MainLayout title="404 - Page Not Found" url="/404/">
  <div class="flex flex-col items-center justify-items-center gap-7">
    <Image src={error} alt="404" height={250} width={250} class="mt-10" />
    <h1 class="text-5xl">Page Not Found</h1>
    <p class="text-2xl mb-10">
      Sorry, we couldn't find the page you were looking for.
    </p>
    <a
      href="/"
      class="inline-block p-2 mb-6 rounded-md bg-gray-100 hover:bg-gray-200 dark:bg-gray-600 dark:hover:bg-gray-500"
      >Go Back Home</a
    >
  </div>
</MainLayout>
